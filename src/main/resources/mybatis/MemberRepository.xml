<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.adnstyle.boardsj.repository.MemberRepository">
    <resultMap id="simpleResult" type="MemberDto">
        <id property="seq" column="member_seq"/>
        <result property="id" column="member_id"/>
        <result property="pw" column="member_pw"/>
        <result property="name" column="member_name"/>
        <result property="email" column="member_email"/>
        <result property="birth" column="member_birth"/>
        <result property="signupTime" column="member_signup_time"/>
        <result property="grade" column="member_grade"/>
        <result property="role" column="member_role"/>
    </resultMap>

    <!-- 회원 전체 조회 -->
    <select id="listMember" resultMap="simpleResult">
        SELECT member_seq,
               member_id,
               member_pw,
               member_name,
               member_email,
               member_birth,
               member_signup_time,
               member_grade
        FROM member
    </select>

    <!-- 회원단독 조회 -->
    <select id="getSeq" resultMap="simpleResult">
        SELECT member_seq,
               member_id,
               member_pw,
               member_name,
               member_email,
               member_birth,
               member_signup_time,
               member_grade
        FROM member
        WHERE member_seq = #{seq}
    </select>

    <!-- 로그인 정보 조회-->
    <select id="loginMember" resultMap="simpleResult">
        SELECT member_seq,
               member_id,
               member_pw,
               member_name,
               member_email,
               member_birth,
               member_signup_time,
               member_grade
        FROM member
        WHERE member_id = #{id}
          AND member_pw = #{pw}
    </select>

    <!-- 시큐리티 로그인 구현중 -->
    <select id="securityLogin" resultMap="simpleResult">
        SELECT *
        FROM member
        WHERE member_id = #{id}
    </select>

    <!-- 회원등록 -->
    <insert id="signupMember" useGeneratedKeys="true" keyProperty="seq">
        INSERT
        INTO member(member_seq,
                    member_id,
                    member_pw,
                    member_name,
                    member_email,
                    member_birth,
                    member_grade,
                    member_role
                    )
        VALUES (#{seq}, #{id}, #{pw}, #{name}, #{email}, #{birth}, #{grade}, #{role})

    </insert>

    <!-- 회원삭제 -->
    <delete id="deleteMember">
        DELETE
        FROM member
        WHERE member_seq = #{seq}
    </delete>

    <!-- 회원정보 수정 -->
    <update id="updateMember">
        UPDATE member
        SET member_pw=#{pw},
            member_name = #{name},
            member_email = #{email},
            member_birth=#{birth},
            member_grade=#{grade}
        WHERE member_seq = #{seq}
    </update>
</mapper>
